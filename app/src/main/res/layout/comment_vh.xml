<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/comment_vh_card_view_margin_side">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/comment_vh_margin_top_bottom"
        android:layout_marginEnd="@dimen/comment_vh_margin_side"
        android:layout_marginLeft="@dimen/comment_vh_margin_side"
        android:layout_marginRight="@dimen/comment_vh_margin_side"
        android:layout_marginStart="@dimen/comment_vh_margin_side"
        android:layout_marginTop="@dimen/comment_vh_margin_top_bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comment_vh_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/comment_vh_user_bottom_margin"
            android:ellipsize="end"
            android:maxLines="@integer/comment_vh_user_max_lines"
            android:text="test"
            android:textSize="@dimen/comment_vh_user_text_size" />

        <TextView
            android:id="@+id/comment_vh_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="@integer/comment_vh_content_max_lines"
            android:text="Lorepm ipsium blablabalblabl"
            android:textSize="@dimen/comment_vh_content_text_size" />
    </LinearLayout>

</android.support.v7.widget.CardView>